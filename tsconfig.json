{
  "compilerOptions": {
    // Vite requires "ESNext" for modern module handling
    "target": "ESNext", 
    "useDefineForClassFields": true,
    
    // Crucially, Vite uses ESM, so set module to "ESNext" or "NodeNext"
    "module": "ESNext", 
    "moduleResolution": "Node", // Use "Node" resolution for compatibility
    
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    
    // Add paths for the root directory (optional, but good practice)
    "paths": {
      "@/*": ["./*"] 
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }] 
}
